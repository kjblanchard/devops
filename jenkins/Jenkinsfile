// Note: _ (underscore) is a must after the @Library annotation.
//supergoon is defined within jenkins as a shared lib
@Library('supergoon') _
def config_map = [:]
def stages_list = []
def agent_yaml = libraryResource('pod_yaml.yml')

//Run these calls to build your stages list, this is where you should edit.
gitHelper(config_map, stages_list)
dockerHelper(config_map, stages_list)

//The pipeline template to use, do not modify after here.
pipeline {
  agent {
      kubernetes {
          defaultContainer 'jnlp'
          yaml agent_yaml
      }
  }

  stages {
      stage('Initialize Pipeline Template') {
          steps{
              script {
                stages_list.each({val ->
                    val(config_map, stages_list)
                  })
                }
              }
          }
      }
  }