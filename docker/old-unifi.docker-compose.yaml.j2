---
services:
  unifi:
    image: linuxserver/unifi-network-application:amd64-9.5.21
    container_name: unifi
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - MONGO_USER=unifi
      - MONGO_PASS={{ mongo_pass }}
      - MONGO_HOST=unifi-db
      - MONGO_PORT=27017
      - MONGO_DBNAME=unifi
      - MONGO_AUTHSOURCE=admin
    volumes:
      - /opt/unifi/config:/config
    ports:
      - 8443:8443
      - 3478:3478/udp
      - 10001:10001/udp
      - 8080:8080
      #- 1900:1900/udp #optional
      - 8843:8843 #optional
      - 8880:8880 #optional
      - 6789:6789 #optional
      - 5514:5514/udp #optional
    restart: unless-stopped
  unifi-db:
    image: docker.io/mongo:4.4
    restart: always
    container_name: unifi-db
    environment:
      - MONGO_INITDB_ROOT_USERNAME=root
      - MONGO_INITDB_ROOT_PASSWORD={{ mongo_admin_pass }}
      - MONGO_AUTHSOURCE=admin
      - MONGO_HOST=unifi-db
      - MONGO_USER=unifi
      - MONGO_DBNAME=unifi
      - MONGO_PASS={{ mongo_pass }}
    volumes:
      - /opt/unifi/db:/data/db
      - /opt/unifi/init-mongo.sh:/docker-entrypoint-initdb.d/init-mongo.sh:ro
